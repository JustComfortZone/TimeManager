page{
  background-color: #c78e8e;
  overflow: hidden;
}

.place-holder {
  color: #5b0000;
}
.content{
  width: 660rpx;
  margin: 40rpx auto;
  display: flex;
  flex-wrap: wrap;
  
}
.content .icon_item{
  width: 220rpx;
  height: 130rpx;
  text-align: center;
  margin-bottom: 50rpx;
  
}
