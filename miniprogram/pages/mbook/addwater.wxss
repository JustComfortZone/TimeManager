}

.nav {
  width: 153px;
  height: 32px;
  margin: 20rpx auto;
   border: 1px solid #8f1c0d;
  border-radius: 3px; 
  font-size: 14px;
  color: #8f1c0d;
}

.nav-item {
  float: left;
  width: 76px;
  line-height: 32px;
  text-align: center;
  
}

.nav-item:nth-child(0) {
  border-right: 1px solid #8f1c0d;
}

.nav-active {
  background-color: #8f1c0d;
  color: #d3c0c0;
}

